<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= fruit.name %>
  </title> 
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <!-- Dark Mode Toggle Button -->
<button id="darkModeToggle" style="margin: 20px;">Toggle Dark Mode ðŸŒ™</button>

<script>
  const toggleButton = document.getElementById('darkModeToggle');
  const body = document.body;

  
  if (localStorage.getItem('darkMode') === 'enabled') {
    body.classList.add('dark-mode');
  }

  toggleButton.addEventListener('click', () => {
    body.classList.toggle('dark-mode');

    
    if (body.classList.contains('dark-mode')) {
      localStorage.setItem('darkMode', 'enabled');
    } else {
      localStorage.setItem('darkMode', 'disabled');
    }
  });
</script>
  <div class="fruit-details"></div>
  <h1>
    <%= fruit.name %>
  </h1>

  <% if (fruit.price) { %>
    <p>This fruit costs $<%= fruit.price %>
    </p>
    <% } else { %>
      <p>This fruit is evidently free!</p>
      <% } %>

        <% if(fruit.isReadyToEat){ %>
          <p>This fruit is ready to eat!</p>
          <% } else { %>
            <p>This fruit is not ready to eat!</p>
            <% } %>
              <div class="fruit-actions">
                <form class="delete-form" action="/fruits/<%=fruit._id%>?_method=DELETE" method="POST">
                  <button class="delete-button" type="submit">
                    Delete <%= fruit.name %>
                  </button>
                </form>
                <a class="edit-link" href="/fruits/<%= fruit._id %>/edit">
                  <div class="edit-text">Edit <%= fruit.name %>
                  </div>
                </a>
              </div>
              <a class="fruits-index-link" href="/fruits">
                <div class="index-link-text">Back to Fruits</div>
              </a>
</body>

</html>